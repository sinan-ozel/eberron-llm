{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": [
          "docker build --tag sinan-ozel/jupyterlab/jupyterlab:latest --file ./jupyterlab/Dockerfile .;",
        ],
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "push-to-aws",
        "type": "shell",
        "command": [
          "AWS_ACCOUNT_ID=$(aws sts get-caller-identity --query 'Account' --output text);",
          "aws ecr get-login-password --region ca-central-1 | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com",
        ],
        "windows": {
          "command": [
            "$AWS_ACCOUNT_ID = $(aws sts get-caller-identity --query Account --output text); ",
            "$HOSTNAME = \\\"${AWS_ACCOUNT_ID}.dkr.ecr.$($env:REGION).amazonaws.com\\\";",
            "aws ecr get-login-password --region ca-central-1 | docker login --username AWS --password-stdin $HOSTNAME;",
          ]
        },
        "options": {
          "env": {
            "REGION": "ca-central-1"
          }
        },
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
  }